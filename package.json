{
    "name": "atom-snippets",
    "displayName": "Atom Snippets",
    "description": "Code snippets for Atom",
    "keywords": [
        "atom",
        "snippets"
    ],
    "version": "0.1.8",
    "publisher": "congpeisen",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/icon.png",
    "activationEvents": [
        "onCommand:extension.soy"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.soy",
                "title": "Soy"
            },
            {
                "command": "extension.build",
                "title": "Build"
            }
        ],
        "keybindings": [
            {
                "command": "extension.soy",
                "key": "ctrl+.",
                "mac": "cmd+.",
                "when": "editorTextFocus"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.soy",
                    "group": "navigation",
                    "when": "editorTextFocus"
                }
            ]
        },
        "snippets": [
            {
                "language": "atom",
                "path": "./snippets/atom.json"
            },
            {
                "language": "atom-html",
                "path": "./snippets/atom-html.json"
            },
            {
                "language": "config",
                "path": "./snippets/atom-config.json"
            },
            {
                "language": "php",
                "path": "./snippets/atom-php.json"
            },
            {
                "language": "smarty",
                "path": "./snippets/atom-smarty.json"
            },
            {
                "language": "javascript",
                "path": "./snippets/atom-js.json"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "eslint": "^4.11.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/paysonTsung/AtomSnippets.git"
    }
}
